<div class="pull-left">
  <h1>我的图片</h1>
</div>
<div class="pull-right">
  <h1><%= link_to '新增图片', new_image_path, :class=>"btn btn-primary start" %></h1>
</div>

<table class='table table-hover'>
  <tr>
    <th>图片</th>
    <th>占用空间</th>
    <th>尺寸</th>
    <th>格式</th>
    <th>上传时间</th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= link_to(image_tag("/images/display/"+image.file_id+"!thumb"), image) %></td>
    <td><%= file_size(image.file_size) %></td>
    <td><%= image.width %> x <%= image.height %></td>
    <td><%= image.format %></td>
    <td><%= image.created_at %></td>
    <td><%= link_to '查看', image %></td>
    <td><%= link_to '删除', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div class="apple_pagination">
  <%= will_paginate @images, :previous_label => '<< 上一页', :next_label => '下一页 >>' %>
</div>
