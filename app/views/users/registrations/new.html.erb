<style>
    .form-signin {
      max-width: 300px;
      padding: 19px 29px 29px;
      margin: 0 auto 0px;
            background-color: #fff;
      border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
    }
    .form-signin input[type="text"], .form-signin input[type="password"] {
      font-size: 16px;
      height: auto;
      margin-bottom: 15px;
      padding: 7px 9px;
    }
</style>

<%= form_for(resource, :html => {:class=>'form-signin'}, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <% if flash[:notice] %>
      <div class="alert alert-block"><%= flash[:notice]%></div>
  <% end %>
  <% if flash[:alert] %>
      <div class="alert alert-error"><%= flash[:alert]%></div>
  <% end %>
  <h2>注册</h2>
  <div>
    <%= f.email_field :email, :autofocus => true, :placeholder=>"邮箱" %></div>

  <div>
    <%= f.password_field :password, :placeholder=>"密码(至少8位)" %></div>

  <div>
    <%= f.password_field :password_confirmation, :placeholder=>"确认密码" %></div>

  <div><%= f.submit "注册", :class=>"btn btn-primary" %> <%= link_to("登陆", new_session_path(resource_name))%></div>
<% end %>

